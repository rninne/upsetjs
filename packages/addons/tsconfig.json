{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "baseUrl": "./",
    "declaration": false,
    "noEmit": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "paths": {
      "@": ["./"],
      "*": ["src/*", "node_modules/*"]
    }
  },
  "typedocOptions": {
    "name": "UpSet.js Addons",
    "out": "./docs",
    "theme": "default",
    "excludeExternals": true,
    "excludePrivate": true,
    "includeVersion": true,
    "hideGenerator": true
  }
}
