{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "target": "ES5",
    "rootDir": "./src",
    "baseUrl": "./",
    "noEmit": true,
    "removeComments": true,
    "declaration": false,
    "paths": {
      "@": ["./src"],
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"],
      "*": ["*", "node_modules/*"]
    }
  },
  "typedocOptions": {
    "name": "UpSet.js Bundle",
    "out": "./docs",
    "theme": "default",
    "excludeExternals": true,
    "excludePrivate": true,
    "includeVersion": true,
    "hideGenerator": true
  }
}
